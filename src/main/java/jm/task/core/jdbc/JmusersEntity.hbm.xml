<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="jm.task.core.jdbc.JmusersEntity" table="jmusers" schema="mydbtest">
        <id name="id">
            <column name="ID" sql-type="bigint"/>
        </id>
        <property name="name">
            <column name="Name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="LastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="age">
            <column name="Age" sql-type="tinyint"/>
        </property>
    </class>
</hibernate-mapping>